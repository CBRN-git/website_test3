      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">
        {organizers.map((organizer) => (
          <OrganizerPanel
            key={organizer.name}
            name={organizer.name}
            affiliation={organizer.affiliation}
            bio={organizer.bio}
            image={organizer.image}
            social={organizer.social}
          />
        ))}
